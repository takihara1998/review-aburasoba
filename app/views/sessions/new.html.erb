<div class="text-center">
  <h2 class="mb-5">ログイン</h2>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group mb-5">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "example@email.org" %>
      </div>

      <div class="form-group mb-5">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <p class="text-center"><%= f.submit 'ログイン', class: 'btn btn-primary' %></p>
    <% end %>

    <p class="text-center", style="margin-top: 80px;">初めてご利用される方は <%= link_to 'アカウント作成', signup_path %></p>
  </div>
</div>