<% if current_user.good_now?(review) %>
  <%= form_with(model: current_user.review_likes.find_by(review_id: review.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit '役立たなかった...', class: 'btn btn-danger btn-block' %> <%= review.review_likes.count %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.review_likes.build, local: true) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= f.submit '役立った！', class: 'btn btn-primary btn-block' %> <%= review.review_likes.count %>
  <% end %>
<% end %>