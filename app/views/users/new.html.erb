<div class="text-center">
  <h2 class="mb-5">新規アカウント作成</h2>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group mb-5 mt-2">
        <%= f.label :name, 'お名前（ニックネーム）' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group mb-5">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "example@email.org" %>
      </div>

      <div class="form-group mb-5">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group mb-5">
        <%= f.label :password_confirmation, 'パスワード再入力' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <p class="text-center"><%= f.submit 'アカウント作成', class: 'btn btn-primary' %></p>
    <% end %>
  </div>
</div>